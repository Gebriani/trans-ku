<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:elevation="5dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding10"
            android:paddingLeft="@dimen/padding10"
            android:paddingRight="@dimen/padding10"
            android:paddingTop="@dimen/padding15">

            <EditText
                android:id="@+id/reg_two_et_no_ktp"
                style="@style/AppTheme.Sumi.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin12"
                android:drawableLeft="@drawable/ic_idcard_24dp"
                android:hint="@string/no_identity_card"
                android:inputType="number"
                android:maxLines="1" />

            <EditText
                android:id="@+id/reg_two_et_address"
                style="@style/AppTheme.Sumi.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin12"
                android:background="@drawable/bg_round_accent"
                android:drawableLeft="@drawable/ic_home_24dp"
                android:hint="@string/address_label"
                android:inputType="textMultiLine"
                android:maxLines="2" />

            <Spinner
                android:id="@+id/reg_two_spin_provinsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin12"
                android:background="@drawable/bg_round_accent" />

            <Spinner
                android:id="@+id/reg_two_spin_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin12"
                android:background="@drawable/bg_round_accent" />

            <EditText
                android:id="@+id/reg_two_et_portal_code"
                style="@style/AppTheme.Sumi.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin12"
                android:drawableLeft="@drawable/ic_home_24dp"
                android:hint="@string/portal_code_label"
                android:inputType="number"
                android:maxLines="1" />

            <EditText
                android:id="@+id/reg_two_et_phone"
                style="@style/AppTheme.Sumi.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin12"
                android:drawableLeft="@drawable/ic_call_24dp"
                android:hint="@string/no_telphone_label"
                android:inputType="phone"
                android:maxLines="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/reg_two_bt_batal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:layout_weight="1"
                    android:text="@string/cancel_label"
                    android:theme="@style/AppTheme.Sumi.BlackButton" />

                <Button
                    android:id="@+id/reg_two_bt_next"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:layout_weight="1"
                    android:text="@string/next_label"
                    android:theme="@style/AppTheme.Sumi.RedButton" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>