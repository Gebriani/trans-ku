<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/adapter_invenList_root_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/adapter_invenList_nameGoods"
            style="@style/AppTheme.Sumi.Text.TinyBlack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center_vertical"
            android:padding="@dimen/padding" />

        <TextView
            android:id="@+id/adapter_invenList_storeStock"
            style="@style/AppTheme.Sumi.Text.TinyBlack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center_vertical"
            android:padding="@dimen/padding" />

        <TextView
            android:id="@+id/adapter_invenList_buyPriceGoods"
            style="@style/AppTheme.Sumi.Text.TinyBlack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center_vertical"
            android:padding="@dimen/padding" />

        <TextView
            android:id="@+id/adapter_invenList_priceGoods"
            style="@style/AppTheme.Sumi.Text.TinyBlack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center_vertical"
            android:padding="@dimen/padding" />

    </LinearLayout>


</LinearLayout>
