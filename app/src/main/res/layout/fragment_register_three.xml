<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardCornerRadius="3dp"
        android:layout_margin="@dimen/margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            android:paddingBottom="@dimen/padding10"
            android:paddingLeft="@dimen/padding10"
            android:paddingRight="@dimen/padding10"
            android:paddingTop="@dimen/padding15">

            <Spinner
                android:id="@+id/reg_three_spin_business_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin12"
                android:background="@drawable/bg_round_accent" />

            <EditText
                android:id="@+id/reg_three_et_store_name"
                style="@style/AppTheme.Sumi.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin12"
                android:drawableLeft="@drawable/ic_home_24dp"
                android:hint="@string/store_name_label"
                android:maxLines="2" />

            <TextView
                android:id="@+id/reg_three_upload_profile"
                style="@style/AppTheme.Sumi.Text.RegulerWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin12"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:hint="Upload Foto Profile"
                android:padding="@dimen/padding"
                android:textColorHint="@android:color/white" />

            <TextView
                android:id="@+id/reg_three_upload_ktp"
                style="@style/AppTheme.Sumi.Text.RegulerWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:hint="Upload Foto KTP"
                android:padding="@dimen/padding"
                android:textColorHint="@android:color/white" />


            <include
                layout="@layout/input_photo_profile_ktp"
                android:visibility="gone" />

            <Button
                android:id="@+id/reg_three_bt_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="@string/registration_label"
                android:theme="@style/AppTheme.Sumi.RedButton" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>