<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:elevation="5dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding10"
            android:paddingLeft="@dimen/padding10"
            android:paddingRight="@dimen/padding10"
            android:paddingTop="@dimen/padding15">

            <Spinner
                android:id="@+id/reg_one_spin_cust_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin12"
                android:background="@drawable/bg_round_accent"
                android:entries="@array/cust_type_arrays" />

            <EditText
                android:id="@+id/reg_one_et_fullname"
                style="@style/AppTheme.Sumi.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin12"
                android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                android:hint="@string/fullname_label"
                android:inputType="textPersonName"
                android:maxLines="1" />

            <EditText
                android:id="@+id/reg_one_et_email"
                style="@style/AppTheme.Sumi.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin12"
                android:drawableLeft="@drawable/ic_email_24dp"
                android:hint="@string/email_label"
                android:inputType="textEmailAddress"
                android:maxLines="1" />

            <EditText
                android:id="@+id/reg_one_et_password"
                style="@style/AppTheme.Sumi.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin12"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:hint="@string/password_label"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/reg_one_et_retry_password"
                style="@style/AppTheme.Sumi.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin12"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:hint="@string/repeat_password_label"
                android:inputType="textPassword" />

            <Spinner
                android:id="@+id/reg_one_spin_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin12"
                android:background="@drawable/bg_round_accent"
                android:entries="@array/genders_arrays" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/reg_one_bt_batal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:layout_weight="1"
                    android:text="@string/cancel_label"
                    android:theme="@style/AppTheme.Sumi.BlackButton" />

                <Button
                    android:id="@+id/reg_one_bt_next"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:layout_weight="1"
                    android:text="@string/next_label"
                    android:theme="@style/AppTheme.Sumi.RedButton" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
